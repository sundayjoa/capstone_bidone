<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainboardActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your other views here -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="스크롤뷰">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/boardbkButton"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_chat_back"
                            />

                        <ImageView
                            android:id="@+id/bookmarkButton"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd= "80dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_star"
                            />

                        <TextView
                            android:id="@+id/bkmarkView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19dp"
                            android:layout_marginEnd="13dp"
                            android:layout_gravity="end"
                            android:text="북마크 수"
                            android:textColor="#FF6D00"
                            android:textSize="16sp"
                            />


                    </FrameLayout>

                    <TextView
                        android:id="@+id/titleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="Title"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:id="@+id/userView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="userName"
                        android:gravity="end"
                        android:textColor="@color/teal_700"
                        android:textSize="15sp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dt_imagerecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="100dp" />

                    <TextView
                        android:id="@+id/detail_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="상세설명"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="경매입찰가:"
                        android:textColor="#00B8D4"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/increase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="증가가격:"
                        android:textColor="#00B8D4"
                        android:textSize="13sp"
                        />


                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="end"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textSize="13dp"
                android:text="경매시작시간"
                android:textColor="#FF6D00"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ptBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#A3A3A3"
                    android:text="경매 참여" />

                <ImageView
                    android:id="@+id/questionBtn"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_chat" />


            </FrameLayout>



        </LinearLayout>

    </FrameLayout>



    </FrameLayout>

</layout>