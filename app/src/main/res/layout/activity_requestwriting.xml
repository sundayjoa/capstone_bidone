<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RequestwritingActivity">


        <TextView
            android:id="@+id/inputTitle"
            android:layout_width="293dp"
            android:layout_height="46dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_borderline"
            android:hint="  제목을 입력해주세요"
            android:textColor="#000000"
            android:textColorHint="#969696"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="507dp"
            android:text="제목"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/recancelbutton"
            app:layout_constraintEnd_toStartOf="@+id/inputTitle"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inputRequest"
            android:layout_width="366dp"
            android:layout_height="369dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_borderline"
            android:text="의뢰할 물품 내용을 적어주세요."
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputTitle" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="희망 구매가"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputRequest"
            app:layout_constraintVertical_bias="0.211" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="196dp"
            android:layout_height="41dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/background_borderline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/inputRequest"
            app:layout_constraintVertical_bias="0.216" />


        <Button
            android:id="@+id/rwriteButton"
            android:layout_width="120dp"
            android:layout_height="51dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_radious"
            android:text="글쓰기"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/recancelbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.095" />

        <Button
            android:id="@+id/recancelbutton"
            android:layout_width="120dp"
            android:layout_height="51dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="69dp"
            android:background="@drawable/background_radious"
            android:text="취소"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rwriteButton"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.57" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>