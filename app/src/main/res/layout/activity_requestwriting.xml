<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="TouchTargetSize"
    tools:context=".WritingdialogActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="70dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:text="제목:"
                    android:textSize="30sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/inputTitle"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/background_borderline"
                    android:hint="  제목을 입력해주세요"
                    android:textColor="#000000"
                    android:textColorHint="#969696"
                    android:textSize="24sp" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="390dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputRequest"
                    android:layout_width="match_parent"
                    android:layout_height="369dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/background_borderline"
                    android:hint="의뢰할 물품 내용을 적어주세요."
                    android:textSize="20sp"
                    android:textColorHint="#969696"
                    />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="희망 구매가:"
                    android:textSize="24sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/textView2"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_borderline"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="원"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/recancelbutton"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_radious"
                    android:backgroundTint="#FFAB00"
                    android:text="취소"
                    android:textSize="20sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/rwriteButton"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_radious"
                    android:text="글쓰기"
                    android:textSize="20sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</layout>