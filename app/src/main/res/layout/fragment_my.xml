<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    tools:ignore="TouchTargetSize"
    tools:context=".AlarmFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="스크롤뷰">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:text="My 페이지"
                        android:textColor="#000000"
                        android:textSize="25sp"
                         />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/detail_alarm"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_detail_alarm"
                        />

                    <TextView
                        android:id="@+id/counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/notification_bg"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:text="0" />

                </LinearLayout>

            </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="이름"
                    android:textColor="#000000"
                    android:textSize="22sp"
                     />

                <EditText
                    android:id="@+id/textView14"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@drawable/background_borderline"
                    android:hint="현재 이름"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    />

                <Button
                    android:id="@+id/namechangebutton"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:backgroundTint="@color/blue"
                    android:text="변경"
                    android:textSize="20sp"
                    />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="기본 주소"
                android:textColor="#000000"
                android:textSize="22sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:background="@drawable/background_borderline"
                    android:hint="기본 설정 주소"
                    android:textColorHint="#969696"
                    android:textSize="20sp"
                    />

                <Button
                    android:id="@+id/findaddressbutton"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#88C6C0"
                    android:text="찾기"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textView17"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/background_borderline"
                    android:hint="상세주소"
                    android:textColorHint="#969696"
                    android:textSize="20sp"
                    />

                <Button
                    android:id="@+id/addresschangebutton"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/blue"
                    android:text="변경"
                    android:textSize="20sp"
                    />

            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="내가 쓴 게시글"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myboard_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                tools:listitem="@layout/item_board"
                android:background="@drawable/background_borderline"/>

        </FrameLayout>

        </LinearLayout>

    </ScrollView>

</layout>